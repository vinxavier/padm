<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="br.edu.ufabc.padm.agendacontatos">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:name=".App">
        <activity android:name=".MainActivity"
            android:label="Agenda de contatos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity
                android:name=".ContatoDetails"
                android:label="@string/title_activity_contato_details" >
        </activity>
        <activity
                android:name=".ContatoInsertEdit"
                android:label="@string/title_activity_contato_insert" >
        </activity>
        <activity android:name=".PegarContato"
                  android:label="@string/selecionar_contatos">
            <intent-filter>
                <action android:name="android.intent.action.PICK" />
                <data android:mimeType="text/contact"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>